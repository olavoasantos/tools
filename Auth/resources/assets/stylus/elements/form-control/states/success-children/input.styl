/**
*   Form control has success input
*
*   @class     .form-control.has-success input
*/
& input {

	/**
	*   Border color
	*
	*   @var    $border-color-*  Form control has success border color.
	*/
	$border-color = _green-d1;
	$border-color-hover = _green;

	/**
	*   Box shadow color
	*
	*   @var    $box-shadow-color  Form control has success box shadow color.
	*/
	$box-shadow-color = $border-color-hover;

	/**
	*   .form-control.has-success input
	*
	*   Main style.
	*/
	& {
		user-select none
		border-color $border-color
	}

	/**
	*   .form-control.has-success input:hover
	*
	*   Hovered style.
	*/
	&:hover {
		border-color $border-color-hover
		box-shadow 0px 0px 2px $box-shadow-color
	}

}
